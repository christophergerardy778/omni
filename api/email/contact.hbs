<div>
  <h1>Contact OMNI WEB</h1>
  {{#if name }}
    <p><b>Name: </b>{{ name }}</p>
  {{/if }}
  {{#if company }}
    <p><b>Company: </b>{{ company }}</p>
  {{/if }}
  <p><b>Email:</b> {{ email }}</p>
  <p><b>phone:</b> {{ telephone }}</p>
  {{#if equipment }}
    <p><b>Equipment Required: </b>{{ equipment }}</p>
  {{/if }}
  {{#if source }}
    <p><b>Source: </b>{{ source }}</p>
  {{/if }}
  {{#if destination }}
    <p><b>Destination: </b>{{ destination }}</p>
  {{/if }}
  {{#if comments }}
    <p><b>Comments: </b>{{ comments }}</p>
  {{/if }}
  {{#if message }}
    <p><b>Message: </b>{{ message }}</p>
  {{/if }}
</div>